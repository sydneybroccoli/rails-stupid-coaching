<div class="main-container">
  <div class="question-container">
    <p>YOUR QUESTION:</p>
    <p>"<%= @question %>"</p>
  </div>
  <br>
  <div class="answer-container">
    <p>COACHES ANSWER:</p>
    <% if @question == @question.upcase %>
      <% if @question.blank? %>
      <p id="answer">...</p>
      <% elsif @question == "I am going to work right now!".upcase %>
        <p id="answer"><%= @answers[:upcase] + ' ' + @answers[:downcase][1] %></p>
      <% elsif @question.include?("?") %>
        <p id="answer"><%= @answers[:upcase] + ' ' + @answers[:downcase][2] %></p>
      <% else %>
        <p id="answer"><%= @answers[:upcase] + ' ' + @answers[:downcase][3] %></p>
      <% end %>

    <% else %>

      <% if @question.blank? %>
        <p id="answer">...</p>
      <% elsif @question == "I am going to work right now!" %>
        <p id="answer"><%= @answers[:downcase][1] %></p>
      <% elsif @question.include?("?") %>
        <p id="answer"><%= @answers[:downcase][2] %></p>
      <% else %>
        <p id="answer"><%= @answers[:downcase][3] %></p>
      <% end %>
    <% end %>
  </div>
  <br><br>
  <div class="redirect-container">
    <%= link_to 'ASK A NEW QUESTION', '/ask' %>
<!--     <a href="/ask">ASK A NEW QUESTION</a> -->
  </div>
</div>

